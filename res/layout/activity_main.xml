<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

	<!--  Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#1483D9">
        <TextView android:id="@+id/status_bar"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:text="hello"
            android:gravity="center"
        />
    </LinearLayout>
    
    <!-- Column Header -->
    <LinearLayout android:id="@+id/col_header"
        android:background="#10A3A3"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        >
        <TextView android:id="@+id/col1"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:text="col1"
            android:gravity="center"
            android:width="65dip"
            android:height="20dip"
        />
        <TextView android:id="@+id/col2"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:text="col2"
            android:gravity="center"
            android:width="65dip"
            android:height="20dip"
        />
        <TextView android:id="@+id/col3"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:text="col_3"
            android:gravity="center"
            android:width="65dip"
            android:height="20dip"
        />
        <TextView android:id="@+id/col4"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:text="col_4"
            android:gravity="center"
            android:width="65dip"
            android:height="20dip"
        />
        <TextView android:id="@+id/col5"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:text="col5"
            android:gravity="center"
            android:width="65dip"
            android:height="20dip"
        />
    </LinearLayout>
 
    <!-- List Divider -->
    <View android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="?android:attr/listDivider" />

    <ListView
        android:id="@+id/listView1"
        android:layout_width="wrap_content"
        android:layout_height="392dp"
        android:layout_above="@+id/button_connect"
        android:layout_alignRight="@+id/header"
        android:layout_below="@+id/header"
        android:orientation="horizontal" >

    </ListView>

    <!-- Footer -->

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#1483D9" 
        android:paddingBottom="5dip"
   	 	android:paddingLeft="2dip"
    	android:paddingRight="2dip"
    	android:paddingTop="5dip">

    	<Button
    	    android:id="@+id/button_connect"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignParentBottom="true"
    	    android:layout_centerHorizontal="true"
    	    android:onClick="connectToDatabase"
    	    android:orientation="horizontal"
    	    android:background="#DAE3EB"
    	    android:layout_marginRight="4dip"
        	android:layout_marginLeft="8dip"
        	android:layout_weight="1"
    	    android:text="Connect" />

    	<Button
	        android:id="@+id/button_login"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        	android:onClick="gotoMenu"
        	android:background="#DAE3EB"
        	android:layout_marginRight="4dip"
        	android:layout_marginLeft="8dip"
        	android:layout_weight="1"
        	android:text="Menu" />
    </LinearLayout>

</LinearLayout>